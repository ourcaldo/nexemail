modules = ["rust-stable", "bash"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["unzip"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Reacher Backend"

[[workflows.workflow]]
name = "Reacher Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && cargo run --release --bin reacher_backend 2>&1 || echo \"Build in progress or failed - this is a large Rust project\""

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 8080
externalPort = 8080
